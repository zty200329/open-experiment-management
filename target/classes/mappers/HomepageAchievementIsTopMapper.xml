<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.swpu.uchain.openexperiment.mapper.HomepageAchievementIsTopMapper" >
  <!--关联关系缓存处理-->
  <cache-ref namespace="com.swpu.uchain.openexperiment.mapper.HomepageAchievementMapper"/>
  <resultMap id="BaseResultMap" type="com.swpu.uchain.openexperiment.domain.HomepageAchievementIsTop" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="homepage_achievement_id" property="homepageAchievementId" jdbcType="INTEGER" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from homepage_achievement_is_top
    where homepage_achievement_id = #{homepageAchievementId,jdbcType=INTEGER}
  </delete>
  <delete id="deleteByAchievementKey" parameterType="java.lang.Integer" >
    delete from homepage_achievement_is_top
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.swpu.uchain.openexperiment.domain.HomepageAchievementIsTop" >
    insert into homepage_achievement_is_top (homepage_achievement_id)
    values (#{homepageAchievementId,jdbcType=INTEGER})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.swpu.uchain.openexperiment.domain.HomepageAchievementIsTop" >
    update homepage_achievement_is_top
    set homepage_achievement_id = #{homepageAchievementId,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select id, homepage_achievement_id
    from homepage_achievement_is_top
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAllAchieveId" resultType="java.lang.Integer"  >
    select homepage_achievement_id
    from homepage_achievement_is_top
  </select>
  <select id="selectAll" resultType="com.swpu.uchain.openexperiment.VO.announcement.TopHomepageAchievement" >
    select homepage_achievement_is_top.homepage_achievement_id,
           homepage_achievement.img_url
    from homepage_achievement_is_top
    inner join homepage_achievement on homepage_achievement.id = homepage_achievement_is_top.homepage_achievement_id
    ORDER BY
	homepage_achievement.publish_time DESC
  </select>
</mapper>